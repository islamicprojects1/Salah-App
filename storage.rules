rules_version = '2';
// Salah App â€“ Firebase Storage Security Rules
// Paths match ApiConstants: userProfileImagesPath, groupImagesPath

service firebase.storage {
  match /b/{bucket}/o {

    // User profile images: users/profile_images/{userId}/...
    match /users/profile_images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback: users/{userId}/... (legacy)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Group/Family images: groups/images/{groupId}/...
    match /groups/images/{groupId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    match /groups/{groupId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
